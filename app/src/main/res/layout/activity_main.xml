<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="@android:color/darker_gray"

    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">


        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/act0_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="@string/act0_title"
            android:textSize="24sp"
            android:textColor="@android:color/black"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@drawable/ic_wifi_black_24dp"
                android:contentDescription="@string/act0_flower"
                android:onClick="wifi" />

            <TextView
                android:id="@+id/act0_descwifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:gravity="center"
                android:onClick="wifi"
                android:text="@string/act0_descWifi"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </TableRow>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@drawable/ic_rose"
                android:contentDescription="@string/act0_flower"
                android:onClick="flower" />

            <TextView
                android:id="@+id/act0_descFlower"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:gravity="center"
                android:onClick="flower"
                android:text="@string/act0_descFlower"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </TableRow>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@drawable/ic_information"
                android:contentDescription="@string/act0_flower"
                android:onClick="retrofit" />

            <TextView
                android:id="@+id/act0_descbrasil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:gravity="center"
                android:onClick="retrofit"
                android:text="@string/act0_descQuestion"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </TableRow>

        <TextView
            android:id="@+id/act0_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/act0_about"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/black"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>